<% layout("/layouts/boilerplate") %>

    <div class="container">
        <h2>Forgot Password?</h2>
        <% if (locals.error) { %>
            <div class="alert alert-danger"><%= locals.error %></div>
        <% } %>
        <% if (locals.success) { %>
            <div class="alert alert-success"><%= locals.success %></div>
        <% } %>
        <form action="/host/forgot-password" method="POST">
            <div class="form-group">
                <label for="email">Enter your Email:</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="Your email address" required>
            </div>
            <button type="submit" class="btn btn-primary">Send OTP</button>
        </form>
    </div>

