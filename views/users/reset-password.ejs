<% layout("/layouts/boilerplate") %>

<div class="container">
    <h2>Reset Password</h2>
    <% if (locals.error) { %>
        <div class="alert alert-danger"><%= locals.error %></div>
    <% } %>
    <% if (locals.success) { %>
        <div class="alert alert-success"><%= locals.success %></div>
    <% } %>
    <form action="/users/reset-password" method="POST">
        <input type="hidden" name="userId" value="<%= userId %>">
        <div class="form-group">
            <label for="password">New Password:</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="New password" required>
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm new password" required>
        </div>
        <button type="submit" class="btn btn-primary">Reset Password</button>
    </form>
</div>