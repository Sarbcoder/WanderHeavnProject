<% layout("/layouts/boilerplate") %>

<div class="container">
    <h2>Verify OTP</h2>
    <% if (locals.error) { %>
        <div class="alert alert-danger"><%= locals.error %></div>
    <% } %>
    <% if (locals.success) { %>
        <div class="alert alert-success"><%= locals.success %></div>
    <% } %>
    <form action="/users/verify-otp" method="POST">
        <div class="form-group">
            <label for="otp">Enter OTP:</label>
            <input type="text" name="otp" id="otp" class="form-control" placeholder="Enter OTP sent to your email" required>
        </div>
        <button type="submit" class="btn btn-primary">Verify OTP</button>
    </form>
</div>